{% extends "CmsCoreBundle:Layout:login.html.twig" %}
{% block title 'Recuperação de senha' %}
{% block content %}
<div class="center-block">
    <div class="login-block">
        <form action="{{ path('core_auth_forget_password') }}" id="login-form" class="orb-form" method="post">
            <header>
                <div class="image-block"><img src="{{ asset('bundles/cmscore/images/logo.png') }}" alt="User" /></div>
                Recuperação de Senha
            </header>

            {% include 'CmsCoreBundle:Layout:message.html.twig' %}

            <fieldset>
                <section>
                    <div class="row">
                        <label class="label col col-3">E-mail</label>
                        <div class="col col-9">
                            <label class="input">
                                <input type="email" name="email" {% if email %}value="{{ email }}"{% endif %}>
                            </label>
                            <div class="note"><a href="{{ path('core_auth_login') }}">Voltar para login</a></div>
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer>
                <button type="submit" class="btn btn-default">Enviar</button>
            </footer>
        </form>
    </div>
</div>
{% endblock %}